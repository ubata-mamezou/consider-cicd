{
  "name": "order-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:dev": "vite --mode dev",
    "dev:development": "vite --mode development",
    "dev:prod": "vite --mode prod",
    "build": "tsc -b && vite build",
    "build:dev": "tsc -b && vite build --mode dev",
    "build:prod": "tsc -b && vite build --mode prod",
    "lint": "eslint .",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --format html --output-file test-result/reports/lint/index.html",
    "preview": "vite preview",
    "test:ci": "jest --coverage --passWithNoTests"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "jest-html-reporters": "^3.1.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.32.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "babel-jest": "^30.0.5",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^features/(.*)$": "<rootDir>/src/features/$1"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.(t|j)sx",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)sx?"
    ],
    "coverageDirectory": "../test-result/reports/coverage",
    "testEnvironment": "node",
    "coverageReporters": ["text", "lcov"],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./test-result/reports/test",
          "filename": "index.html",
          "expand": true
        }
      ]
    ]
  }
}
