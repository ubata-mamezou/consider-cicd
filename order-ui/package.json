{
  "name": "order-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:dev": "vite --mode dev",
    "dev:development": "vite --mode development",
    "dev:prod": "vite --mode prod",
    "build": "tsc -b && vite build",
    "build:dev": "tsc -b && vite build --mode dev",
    "build:prod": "tsc -b && vite build --mode prod",
    "lint": "eslint .",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --format html --output-file test-result/reports/lint/index.html",
    "preview": "vite preview",
    "test:ci": "jest --coverage --passWithNoTests"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "jest-html-reporters": "^3.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.9.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^6.3.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^features/(.*)$": "<rootDir>/src/features/$1"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.(t|j)sx",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)sx?"
    ],
    "coverageDirectory": "../test-result/reports/coverage",
    "testEnvironment": "node",
    "coverageReporters": ["text", "lcov"],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./test-result/reports/test",
          "filename": "index.html",
          "expand": true
        }
      ]
    ]
  }
}
